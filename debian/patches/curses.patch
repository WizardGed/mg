Description: Link with -ltinfo instead of -lcurses
 mg doesn't use any of libcurses' symbols. This gives slightly tighter
 dependencies.
Author: Peter De Wachter <pdewacht@gmail.com>

--- a/Makefile.in
+++ b/Makefile.in
@@ -17,7 +17,7 @@ mandir=		$(prefix)/man
 CC=		gcc
 CFLAGS?=	-O2 -pipe
 CFLAGS+=	-g -Wall
-LIBS= 		-lcurses
+LIBS= 		-ltinfo
 
 INSTALL=	/usr/bin/install
 STRIP=		/usr/bin/strip
